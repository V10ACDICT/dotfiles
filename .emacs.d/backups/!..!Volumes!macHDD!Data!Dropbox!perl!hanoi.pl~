#ハノイの塔

#サブルーチン呼び出し
&hanoi(3, "左", "中", "右");

#サブルーチン本体
sub hanoi{
    my ($disk, $bar1, $bar2, $bar3) = @_;

    #円盤が1つ以上残っている
    if($disk > 0){
        #再帰呼び出し1
        hanoi($disk - 1, $bar1, $bar3, $bar2);

        #移動内容を表示
        print "円盤$diskを$bar1の棒から$bar2の棒に移動\n";

        #再帰呼び出し2
        hanoi($disk - 1, $bar3, $bar2, $bar1);
    }
}
