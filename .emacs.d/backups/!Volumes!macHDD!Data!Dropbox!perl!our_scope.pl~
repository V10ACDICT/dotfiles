#ourとmyのテスト

#グローバル変数を宣言
@grobal_value = (1, 2, 3);

&modify_my();
print "[my後] ", @grobal_value, "\n";

&modify_our();
print "[our後] ", @grobal_value, "\n";

#myによるグローバル変数の上書き
sub modify_my{
    my(@grobal_value);
    print "[my] ", @grobal_value, "\n";
    @global_value = ("A", "B", "C");
    print "[my変更] ", @grobal_value, "\n";
}

#ourによるグローバル変数の上書き
sub modify_our{
    our(@global_value);
    print "[our] ", @grobal_value, "\n";
    @global_value = ("A", "B", "C");
    print "[our変更] ", @grobal_value, "\n";
}
