<script type="text/javascript">
 //既存のノードを置き換える/削除する

 //署名リストをクリックすると該当する書籍の表示画像を表示する。削除ボタンで表紙画像を非表示にする。

 //署名リストをクリックしたタイミングで実行されるshow関数
 function show(e, isbn){
     //<img>タグを生成
     var img = document.createElement('img');
     img.src = 'http://www.wings.msn.to/books/' + isbn + '/' + isbn + '.jpg';
     img.alt = e.innerHTML;//代替テキストにはリンクテキストをセット
     img.height = 150;
     img.width = 108;
     //画像を表示するための領域(<div id="pic">)を表示
     var pic = document.getElementById('pic');
     //<div>タグ配下に<img>要素が存在するか(画像を表示中か)を確認
     if(pic.getElementsByTagName('img').length > 0){
         //<img>要素が存在する場合、これを新たな<img>タグで置換
         pic.replaceChild(img, pic.lastChild);
     }else{
         //<img>要素が存在しない場合、新たな<img>タグを追加し、削除ボタンを有効にする
         document.getElementById('del').disabled = false;
         pic.appendChild(img);
     }
 }

 //削除ボタンをクリックしたタイミングで実行されるdel関数
 function del(){
     var pic = document.getElementById('pic');
     //<div id="pic">配下の子要素を削除し、削除ボタンを無効にする
     pic.removeChild(pic.lastChild);
     document.getElementById('del').disabled = true;
 }
</script>

<ul>
    <li><a href="JavaScript:void(0)" onclick="show(this, '978-4-7741-4223-4)">
        Apacheポケットリファレンス</a></li>
    <li><a href="JavaScript:void(0)" onclick="show(this, '978-4-7741-4046-6)">
        3ステップでしっかり学ぶMySQL入門</a></li>
    <li><a href="JavaScript:void(0)" onclick="show(this, '978-4-8443-2879-7)">
        改定3版 基礎PHP</a></li>
</ul>
<input type="button" id="del" value="削除"
       disabled="disabled" onclick="del()"/>
<div id="pic"></div>
