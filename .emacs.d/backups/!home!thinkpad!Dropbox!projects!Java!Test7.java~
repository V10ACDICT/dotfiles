import java.io.*
public class Tet7{
        public static void main(String[] args) {
                writeFunc();
                readFunc();
                
        }
        public static void writeFunc() {
                try(FileWriter fw = new FileWriter("write.txt")) {
                        System.out.print("write");
                }catch(IOException e) {
                        System.out.print("IOException");
                }
        }
        

public static void readFunc() {
        try(FileReader fr = new FileReader("read.txt")) {
                System.out.print("read");
        }catch(IOException e) {
                System.out.print("IOException");
        }
}
        }
