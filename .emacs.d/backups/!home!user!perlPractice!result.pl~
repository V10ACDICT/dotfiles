use strict;
use warnings;

#ハッシュの宣言と代入：各教科の点数
my %scores = (math=>55, english => 70, japanese => 100);

#試験結果の表示
foreach my $subject(keys %scores){
    #各教科の点数
    my $score = $scores{$subject};

    #制御構文：８０点以上の場合はgood
    if($score >= 80){
        print "$subject:good\n";
    }
    #制御構文：６０点以上の場合はpass
    elsif($score >= 60){
        print "$subject:pass\n";
    }
    #制御構文：それ以外の場合はfailed
    else{
        print "$subject:failed\n";
    }
}
